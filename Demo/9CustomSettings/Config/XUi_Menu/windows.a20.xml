<configs>

	<remove xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsHeader']/grid[@name='tabButtons']" />

	<append xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsHeader']">
		<panel name="tabButtons" pos="3,-2" depth="2" width="584" height="35">
			<rect>
				<simplebutton name="tabButton" depth="2" pos="-1,0" width="113" height="36" font_size="34" caption_key="xuiBack" bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				<sprite depth="8" sprite="menu_empty2px" pos="112,0" width="2" height="35" color="[black]" />
			</rect>
			<rect>
				<simplebutton name="tabButton" depth="2" pos="114,0" width="93" height="36" font_size="34" caption_key="xuiBack" bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				<sprite depth="8" sprite="menu_empty2px" pos="207,0" width="2" height="35" color="[black]" />
			</rect>
			<rect>
				<simplebutton name="tabButton" depth="2" pos="209,0" width="133" height="36" font_size="34" caption_key="xuiBack" bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				<sprite depth="8" sprite="menu_empty2px" pos="342,0" width="2" height="35" color="[black]" />
			</rect>
			<rect>
				<simplebutton name="tabButton" depth="2" pos="344,0" width="143" height="36" font_size="34" caption_key="xuiBack" bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				<sprite depth="8" sprite="menu_empty2px" pos="487,0" width="2" height="35" color="[black]" />
			</rect>
			<rect>
				<simplebutton name="tabButton" depth="2" pos="489,0" width="96" height="36" font_size="34" caption_key="xuiBack" bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
			</rect>
		</panel>
	</append>

	<!-- we already checked if we have any config outside of this include, ... -->
	<append xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']">
		<rect tab_key="xuiCustomUserSettings">
		</rect>
	</append>

	<!-- ... therefore we know that this for loop has at least one entry -->
	<foreach config="UserSetting"><![CDATA[
		<append xpath="/windows/window[@name='newContinueGame']/rect[@name='tabs']/rect[@name='tabsContents']/rect[@tab_key='xuiCustomUserSettings']">
			<rect>
				<simplebutton name="tabButton" depth="2" pos="-1,{{Mul(-32)}}" width="113" height="36" font_size="34" caption_key="{{Val(name)}}"
				  bordercolor="[transparent]" defaultcolor="[darkGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				<sprite depth="8" sprite="menu_empty2px" pos="112,{{Mul(-32)}}" width="2" height="35" color="[black]" />
			</rect>
		</append>
	]]></foreach>

</configs>
